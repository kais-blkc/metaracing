extends ./base/base.pug
include ./mixins/sec-title
include ./mixins/address
include ./mixins/tabs

block head
  title Где мы находимся

block content
  -
    var tabData = [
      ['t-address-1', 'Сакнт-Петербург'],
      ['t-address-2', 'Москва']
    ]
    var gallery1 = [
      './img/address-gallery-1-1.png',
      './img/address-gallery-1-2.png',
      './img/address-gallery-1-3.png',
      './img/address-gallery-1-4.png',
    ]
    var gallery2 = [
      './img/address-gallery-2-1.png',
      './img/address-gallery-2-2.png',
      './img/address-gallery-2-3.png',
      './img/address-gallery-2-4.png',
    ]
    var gallery3 = [
      './img/address-gallery-3-1.png',
      './img/address-gallery-3-2.png',
      './img/address-gallery-3-3.png',
      './img/address-gallery-3-4.png',
    ]

  mixin address-video(video, extClasses='')
    a(href="./img/sim.mp4" data-fancybox class=`address-video relative w-full ml-[-10px] max-md:max-w-[392px] max-md:mx-auto ${extClasses}`)
      img(class="w-full" src=`./img/${video}` loading="lazy")
      div(class=`absolute top-5 z-1 right-[-30px] max-[1200px]:right-[-10px] max-[1200px]:top-2 max-md:top-2`)
        img(class="max-lg:h-[33px] max-[1200px]:h-[30px]" src="./img/address-b-way.svg", alt="", loading="lazy")
      div(class=`
        video-paly-btn absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 rounded-full
        size-[80px] flex justify-center items-center backdrop-blur-[40px] bg-[#0E1923]/40
      `)
        img(class="size-[28px]" src="./img/play.svg" loading="lazy")
  
  div(class="md:bg-none bg-[url('/img/p-acd-bg-mob.png')] bg-cover bg-top bg-no-repeat w-full")
    section(class="sec-address pb-[50px] pt-[200px] max-[1200px]:pt-[130px] max-md:pt-[150px] relative overflow-visible")
      div(class="absolute top-[10%] l-0 w-full -z-10")
        img(class="w-full" src="./img/address-bg.png" loading="lazy")

      .container
        +sec-title('<span class="text-app-pink">Где мы</span> находимся', 'Адреса клубов в Москве и Санкт-Петербурге')

        div(class="address-list mt-[80px] max-lg:mt-[35px]")
          +tabs(tabData)
            div(data-tab-item="t-address-1" class="tab-pane active")
              div
                div(class="grid grid-cols-[1fr_63.5%] gap-y-[33px] max-md:grid-cols-1 px-7")
                  div(class="w-full flex flex-col gap-y-[40px] max-lg:gap-5")
                    +p-address-item('metaracing <br/> <span class="text-app-pink">М.Московская</span>', '  Санкт-Петербург', 'ул. Типанова, 21 <br/> ТЦ «Питер», 3 этаж', '+7 921 864-38-88', '12:00 – 00:00 <br/> без выходных', true)
                    +address-video('address-video-1.png', 'max-md:hidden')

                  div(
                    class=`
                      w-[88%] max-[1200px]:w-[82%] h-full min-h-[680px] max-[1300px]:min-h-[400px] ml-[80px] 
                      address-item border-gradient relative rounded-[15px] -skew-x-10
                      bg-linear-195 from-transparent from-80% to-app-pink/30
                      max-md:w-full max-md:max-w-[366px] max-md:mx-auto max-md:min-h-[250px]
                    `
                    style=`--border-gradient-image: linear-gradient(225deg, #1E3147 20%, #d442a3)`
                  )
                    div(class="border-gradient-border")
                    div(class="border-gradient-content")
                    div(class=`absolute top-5 max-[1200px]:top-2.5 z-1 left-[-20px]  max-md:top-2`)
                      img(class="h-[51px] max-[1200px]:h-[30px]" src="./img/map-b.svg", alt="", loading="lazy")
                    div(class="absolute rounded-[15px] w-full h-full overflow-hidden")
                      iframe(class="h-full w-[120%] skew-x-10 absolute top-0 left-[-10%]" src="https://yandex.ru/map-widget/v1/?um=constructor%3Ab76037977501323e32999dfe2d470752b295009e7277db5a398f5fa429a2b0b4&amp;source=constructor" theme="dark" frameborder="0" 
                      style=`filter: invert(90%) hue-rotate(180deg) brightness(80%);`
                      )
                  
                  +address-video('address-video-1.png', 'md:hidden max-md:translate-x-[-10px] max-md:w-[calc(100%+10px)]')

                div(class="address-gallery mt-[50px]")
                div(class="swiper swiper-address-gallery")
                  div(class="swiper-wrapper")
                    for img in gallery1
                      div(class="swiper-slide max-w-[395px] max-[1200px]:max-w-[240px]")
                        a(href=img, data-fancybox="address-gallery-1", class="address-gallery-item")
                          img(class="w-full" src=img, alt="", loading="lazy")
                    
              div(class="mt-[126px] max-[1200px]:mt-[77px]")
                div(class="grid grid-cols-[1fr_63.5%] gap-y-[33px] max-md:grid-cols-1 px-7")
                  div(class="w-full flex flex-col gap-y-[40px] max-lg:gap-5")
                    +p-address-item('metaracing <br/> <span class="text-app-pink">М. Приморская</span>', 'Санкт-Петербург', 'малый пр. В.О., д. 88, к. 2 <br/> ТЦ «Шкиперский Молл», 4 этаж', '+7 921 764-38-88', '12:00 – 00:00 <br/> без выходных', true)
                    +address-video('address-video-2.png', 'max-md:hidden')

                  div(
                    class=`
                      w-[88%] max-[1200px]:w-[82%] h-full min-h-[680px] max-[1300px]:min-h-[400px] ml-[80px] 
                      address-item border-gradient relative rounded-[15px] -skew-x-10
                      bg-linear-195 from-transparent from-80% to-app-pink/30
                      max-md:w-full max-md:max-w-[366px] max-md:mx-auto max-md:min-h-[250px]
                    `
                    style=`--border-gradient-image: linear-gradient(225deg, #1E3147 20%, #d442a3)`
                  )
                    div(class="border-gradient-border")
                    div(class="border-gradient-content")
                    div(class=`absolute top-5 max-[1200px]:top-2.5 z-1 left-[-20px]  max-md:top-2`)
                      img(class="h-[51px] max-[1200px]:h-[30px]" src="./img/map-b.svg", alt="", loading="lazy")
                    div(class="absolute rounded-[15px] w-full h-full overflow-hidden")
                      iframe(class="h-full w-[120%] skew-x-10 absolute top-0 left-[-10%]" src="https://yandex.ru/map-widget/v1/?um=constructor%3Ab76037977501323e32999dfe2d470752b295009e7277db5a398f5fa429a2b0b4&amp;source=constructor" theme="dark" frameborder="0" 
                      style=`filter: invert(90%) hue-rotate(180deg) brightness(80%);`
                      )
                  
                  +address-video('address-video-1.png', 'md:hidden max-md:translate-x-[-10px] max-md:w-[calc(100%+10px)]')

                div(class="address-gallery mt-[50px]")
                div(class="swiper swiper-address-gallery")
                  div(class="swiper-wrapper")
                    for img in gallery2
                      div(class="swiper-slide max-w-[395px] max-[1200px]:max-w-[240px]")
                        a(href=img, data-fancybox="address-gallery-1", class="address-gallery-item")
                          img(class="w-full" src=img, alt="", loading="lazy")
                    

            div(data-tab-item="t-address-2" class="tab-pane")
              div(class="mt-[126px] max-[1200px]:mt-[77px]")
                div(class="grid grid-cols-[1fr_63.5%] gap-y-[33px] max-md:grid-cols-1 px-7")
                  div(class="w-full flex flex-col gap-y-[40px] max-lg:gap-5")
                    +p-address-item('metaracing <br/> <span class="text-app-pink">М. ЗИЛ</span>', 'Санкт-Петербург', 'бул. Братьев Весниных, 2 <br/> ТЦ «ЗУМ», 3 этаж', '+7 921 864-38-88', '12:00 – 00:00 <br/> без выходных', true)
                    +address-video('address-video-2.png', 'max-md:hidden')

                  div(
                    class=`
                      w-[88%] max-[1200px]:w-[82%] h-full min-h-[680px] max-[1300px]:min-h-[400px] ml-[80px] 
                      address-item border-gradient relative rounded-[15px] -skew-x-10
                      bg-linear-195 from-transparent from-80% to-app-pink/30
                      max-md:w-full max-md:max-w-[366px] max-md:mx-auto max-md:min-h-[250px]
                    `
                    style=`--border-gradient-image: linear-gradient(225deg, #1E3147 20%, #d442a3)`
                  )
                    div(class="border-gradient-border")
                    div(class="border-gradient-content")
                    div(class=`absolute top-5 max-[1200px]:top-2.5 z-1 left-[-20px]  max-md:top-2`)
                      img(class="h-[51px] max-[1200px]:h-[30px]" src="./img/map-b.svg", alt="", loading="lazy")
                    div(class="absolute rounded-[15px] w-full h-full overflow-hidden")
                      iframe(class="h-full w-[120%] skew-x-10 absolute top-0 left-[-10%]" src="https://yandex.ru/map-widget/v1/?um=constructor%3Ab76037977501323e32999dfe2d470752b295009e7277db5a398f5fa429a2b0b4&amp;source=constructor" theme="dark" frameborder="0" 
                      style=`filter: invert(90%) hue-rotate(180deg) brightness(80%);`
                      )
                  
                  +address-video('address-video-3.png', 'md:hidden max-md:translate-x-[-10px] max-md:w-[calc(100%+10px)]')

                div(class="address-gallery mt-[50px]")
                div(class="swiper swiper-address-gallery")
                  div(class="swiper-wrapper")
                    for img in gallery3
                      div(class="swiper-slide max-w-[395px] max-[1200px]:max-w-[240px]")
                        a(href=img, data-fancybox="address-gallery-1", class="address-gallery-item")
                          img(class="w-full" src=img, alt="", loading="lazy")
                    
  include ./home/register.pug